<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.robbert.hangman.GameActivity"
    android:background="@drawable/chalkboard">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentEnd="false"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quit"
                android:id="@+id/quitButton"
                android:onClick="quit"
                style="@style/chalkButton"
                android:background="@drawable/button_chalk"
                android:textColor="#f8f8f8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restart"
                android:id="@+id/restartButton"
                android:textSize="15sp"
                android:textColor="#f8f8f8"
                android:background="@drawable/button_chalk"
                android:onClick="restart" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Display_text"
        android:weightSum="1"
        android:gravity="top"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/hangmanImage"
            android:src="@drawable/hangman0"
            android:layout_gravity="center"
            android:cropToPadding="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______"
            android:id="@+id/displayWord"
            android:textSize="30sp"
            android:letterSpacing="0.4"
            android:maxLines="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#f8f8f8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorMessage"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="(0/6)"
            android:textColor="#f8f8f8" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/input"
            android:weightSum="1">

            <EditText
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:id="@+id/letterInput"
                android:textSize="50sp"
                android:maxLength="1"
                android:layout_gravity="center"
                android:background="@drawable/abc_textfield_default_mtrl_alpha"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#f8f8f8"
                android:backgroundTint="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:id="@+id/ok"
                android:onClick="checkInput"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:textColor="#f8f8f8"
                android:background="@drawable/button_chalk"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
